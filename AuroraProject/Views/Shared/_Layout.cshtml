<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://fonts.googleapis.com/css?family=Sen&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @*@Mvc.RazorTools.BundleManager.Styles.Render()*@
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    @{Html.RenderAction("Search", "SpecificIndustry");}

    <nav class="navbar navbar-expand-lg navbar-light bg-light p-3">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
            <img src="~/Content/Images/Logo/aurora_logo-03.png" alt="Aurora Logo" />
        </a>
        <button class="navbar-toggler float-right navbar-toggler-button" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            @*<span class="navbar-toggler-icon fa fa-key"></span>*@
            <span><i class="fa fa-user user-icon-toggler"></i></span>
        </button>
        <div class="collapse navbar-collapse text-right" id="navbarNav">
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link Aurora-Pro" href="@Url.Action("AuroraProIndustries", "Industry")">Aurora Pro<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link Become-Influencer" href="@Url.Action("Create", "Influencer")">Become an Influencer</a>
                </li>
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </nav>
    @{Html.RenderAction("Index", "SpecificIndustry");}

    @RenderBody()
    @*<div class="container body-content">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>*@
    @Html.Partial("_Footer")



    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {

            // SEARCH BOX FUNCTIONS
            SearchController.initial();

            // NOTIFICATIONS AT NAV BAR LOGIN
            NotificationController.getNotifications();

            // ON HOVER INDUSTRY DROP DOWN
            HoverIndustryController.initial("#navbarNav-Industry");

        });
    </script>

</body>
</html>
