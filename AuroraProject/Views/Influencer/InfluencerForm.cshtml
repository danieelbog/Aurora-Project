@model AuroraProject.ViewModels.InfluencerFormViewModel
@{
    ViewBag.Title = Model.PageName;
}

<div class="container container-fluid-login">

    <h6 class="navigator-h6">@Html.ActionLink("Aurora", "Index", "Home") > <a href="" onClick="window.location.reload();">@Model.PageName</a></h6>

    <div class="page-decoration container">
        <h1 class="page-heading">@Model.PageName</h1>
        <p class="page-descreption">Custom Text to describe a Specific Industry with one catchy phrase</p>
    </div>

    <div class="row login-row">
        <div class="col-lg-6 col-md-6 d-none d-md-block image-container image-container-login">

        </div>
        <div class="col-lg-6 col-md-6 form-container form-container-login">
            <div class="col-lg-8 col-md-12 col-sm-9 colxs col-12 form-box-login text-center">
                <div class="logo mb-3">
                    <img src="~/Content/Images/Logo/aurora_logo-03.png" width="150" alt="Logo-Image" class="mb-3" />
                    <div class="heading mb-5">
                        <h4>
                            @Model.PageName
                        </h4>
                    </div>
                    @using (Html.BeginForm(Model.Action, "Influencer", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", role = "form", @id = "newUser" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                        <div class="form-group">
                            @Html.Label("Avatar", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="file" id="Avatar" name="upload" />
                            </div>
                        </div>

                        <div class="form-input">
                            <span><i class="fa fa-lock"></i></span>
                            @Html.TextBoxFor(m => m.AboutTheInfluencer, new { placeholder = "Describe yourself", @type = "text" })
                            @Html.ValidationMessageFor(m => m.AboutTheInfluencer, "", new { @class = "error-register" })
                        </div>

                        <div class="form-input">
                            <span><i class="fa fa-lock"></i></span>
                            @Html.TextBoxFor(m => m.MainLanguage, new { placeholder = "What is your main used language", @type = "text" })
                            @Html.ValidationMessageFor(m => m.MainLanguage, "", new { @class = "error-register" })
                        </div>

                        <div class="form-input">
                            <span><i class="fa fa-lock"></i></span>
                            @Html.TextBoxFor(m => m.MainPlatform, new { placeholder = "Where is your main Social Media Account", @type = "text" })
                            @Html.ValidationMessageFor(m => m.MainPlatform, "", new { @class = "error-register" })
                        </div>

                        <div class="form-input">
                            <span><i class="fa fa-user"></i></span>
                            @Html.TextBoxFor(m => m.Exposure, new { placeholder = "How many followers do you have", @type = "text" })
                            @Html.ValidationMessageFor(m => m.Exposure, "", new { @class = "error-register" })
                        </div>

                        <div class="form-input">
                            <span><i class="fa fa-user"></i></span>
                            @Html.TextBoxFor(m => m.MainTopic, new { placeholder = "Your main topic", @type = "text" })
                            @Html.ValidationMessageFor(m => m.MainTopic, "", new { @class = "error-register" })
                        </div>

                        <div class="form-input">
                            <span><i class="fa fa-user"></i></span>
                            @Html.TextBoxFor(m => m.AudienceAge, new { placeholder = "Your audience age", @type = "text" })
                            @Html.ValidationMessageFor(m => m.AudienceAge, "", new { @class = "error-register" })
                        </div>

                        <div class="form-input">
                            <span><i class="fa fa-user"></i></span>
                            @Html.TextBoxFor(m => m.AudienceMainCountry, new { placeholder = "Where is your main Audience From", @type = "text" })
                            @Html.ValidationMessageFor(m => m.AudienceMainCountry, "", new { @class = "error-register" })
                        </div>

                        <div class="form-input">
                            <span><i class="fa fa-user"></i></span>
                            @Html.TextBoxFor(m => m.AudienceMainState, new { placeholder = "What is your Audience main State", @type = "text" })
                            @Html.ValidationMessageFor(m => m.AudienceMainState, "", new { @class = "error-register" })
                        </div>

                        <div class="form-input">
                            <span><i class="fa fa-user"></i></span>
                            @Html.TextBoxFor(m => m.AudienceMainTrait, new { placeholder = "Describe your audience with one phrase", @type = "text" })
                            @Html.ValidationMessageFor(m => m.AudienceMainTrait, "", new { @class = "error-register" })
                        </div>

                        <div class="form-input form-dropdown">
                            <span><i class="fa fa-gear"></i></span>
                            @Html.DropDownListFor(m => m.MembershipTypeID, new SelectList(Model.MembershipTypes, "ID", "Name"), "Membership Type", new { @class = "register-custom-dropdown" })
                            @Html.ValidationMessageFor(m => m.MembershipTypeID, "", new { @class = "error-register" })
                        </div>
                        @Html.HiddenFor(i => i.ID)

                        <div class="text-left mb-3">
                            <button type="submit" class="btn" value="Register">@Model.ButtonName</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>